

<div class="cocktail-container">
  <% @cocktails.each do |cocktail| %>
    <div class="card-index scale">
      <div class="card-img">
        <img src="<%= cocktail.picture_url %>" alt="Card image cap">
      </div>
      <div class="card-body">
        <h3 class="card-title"><%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %></h3>
        <p class="card-text dose"><%= cocktail.ingredients.size %> ingredients</p>
      </div>
      <%= link_to 'Delete', cocktail_path(cocktail),
          method: :delete,
          data: {confirm: 'Are you sure deleting this cocktail?'}, class: 'card-btn'  %>
    </div>
  <% end %>

</div>
<%= link_to '+ Add new Cocktail', new_cocktail_path, class: 'm-8' %>
