

<div class="cocktail-container">
  <% @cocktails.each do |cocktail| %>


      <div class="card-index scale">
        <div class="card-img">
          <img src="<%= cl_image_path cocktail.photo.key %>" alt="Card image cap">
        </div>
        <div class="card-body rotate">
          <h3 class="card-title "><%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %></h3>
          <!--<p class="card-text dose "><%= cocktail.ingredients.size %> ingredients</p>-->
        </div>
        <a href="/cocktails/<%= cocktail.id %>"><div class="card-overlay"></div>
    </a>

      </div>

  <% end %>

</div>
<%= link_to '+ Add new Cocktail', new_cocktail_path, class: 'btn-new' %>

