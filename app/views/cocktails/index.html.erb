<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>


<ul>
  <% @cocktails.each do |cocktail| %>
    <li class="card" style="width: 20rem;">
      <img class="card-img-top" src="<%= cocktail.picture_url %>" alt="Card image cap">
      <div class="card-body">
        <h3 class="card-title"><%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %></h3>
        <h5 class="card-text"><%= cocktail.ingredients %></h5>
        <p class="card-text"><%= cocktail.doses %></p>
      </div>
      <%= link_to 'Delete', cocktail_path(cocktail),
          method: :delete,
          data: {confirm: 'Are you sure deleting this cocktail?'}, class: 'btn btn-danger'  %>
    </li>
  <% end %>

</ul>
